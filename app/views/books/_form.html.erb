<%= form_with model: @book do |form| %>
  <div>
    <%= form.label :title %> <br>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :author %><br>
    <%= form.text_field :author %>
  </div>
  <div>
    <%= form.label :summary %><br>
    <%= form.text_area :summary %>
  </div>
  <div>
    <%= form.label :isbn %><br>
    <%= form.text_field :isbn %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
